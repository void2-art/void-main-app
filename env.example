# Application Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_PASSWORD=admin123

# Sensor Configuration
SENSORS_ENABLED=true
SENSOR_UPDATE_INTERVAL=1000

# Display Configuration
DISPLAY_ENABLED=true
DISPLAY_WIDTH=1920
DISPLAY_HEIGHT=1080

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=your-preferred-voice-id

# Network Configuration (for remote access)
# If you plan to access the Pi remotely, configure these
EXTERNAL_HOST=your-domain.com
HTTPS_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Database (optional - for storing sensor data history)
# DATABASE_URL=sqlite:./data/sensors.db
# or for PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/void_main
