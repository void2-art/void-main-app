{
  "name": "void-main-app",
  "version": "1.0.0",
  "description": "TypeScript application for Raspberry Pi 5 with sensor integration, display output, and AI services",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && npm-run-all --parallel build:backend build:frontend",
    "build:backend": "tsc",
    "build:frontend": "mkdir -p public/styles public/scripts && npm-run-all --parallel build:frontend:*",
    "build:frontend:html": "copyfiles -u 3 \"src/frontend/templates/**/*.html\" public",
    "build:frontend:styles": "sass src/frontend/styles/dashboard.scss public/styles/dashboard.css --style=compressed",
    "build:frontend:scripts": "tsc --project tsconfig.frontend.json",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "dev:frontend": "npm-run-all --parallel dev:frontend:*",
    "dev:frontend:styles": "sass src/frontend/styles/dashboard.scss public/styles/dashboard.css --watch",
    "dev:frontend:scripts": "tsc --project tsconfig.frontend.json --watch",
    "watch": "npm-run-all --parallel watch:*",
    "watch:backend": "tsc -w",
    "watch:frontend": "npm run dev:frontend",
    "clean": "rm -rf dist public/styles public/scripts public/index.html",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "raspberry-pi",
    "sensors",
    "typescript",
    "iot",
    "chatgpt",
    "elevenlabs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "ws": "^8.13.0",
    "openai": "^4.20.1",
    "axios": "^1.5.0",
    "onoff": "^6.0.3",
    "i2c-bus": "^5.2.3",
    "spi-device": "^3.1.2",
    "serialport": "^12.0.0",
    "johnny-five": "^2.1.0",
    "canvas": "^2.11.2",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.10.0",
    "node-cron": "^3.0.2",
    "module-alias": "^2.2.3",
    "node-forge": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.6.3",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "@types/ws": "^8.5.5",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/jest": "^29.5.5",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "nodemon": "^3.0.1",
    "sass": "^1.69.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "@types/web": "^0.0.99"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@/types": "dist/types",
    "@/services": "dist/services",
    "@/controllers": "dist/controllers",
    "@/middleware": "dist/middleware",
    "@/utils": "dist/utils"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/void-main-app.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/void-main-app/issues"
  },
  "homepage": "https://github.com/yourusername/void-main-app#readme"
}
